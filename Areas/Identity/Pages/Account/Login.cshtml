@page
@model LoginModel


<body class="imalog">
<div class="login">
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2 class="texto">Iniciar Sesion</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.DNI" class="form-control" autocomplete="username" aria-required="true" placeholder="DNI" />
                    <label asp-for="Input.DNI" class="form-label">DNI</label>
                    <span asp-validation-for="Input.DNI" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3" >
                   <b><label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label></b> 
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Iniciar Sesion</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Restablecer contraseña</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
